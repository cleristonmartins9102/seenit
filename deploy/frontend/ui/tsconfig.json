{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es5", 
      "es6",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    },
    "allowJs": true,
    "resolveJsonModule": true
  },
  "include": [
    "src", "setupTests.js",
  ],
  "exclude": [
    "src/main/test/cypress"
  ]
}